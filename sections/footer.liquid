{% comment %} Premium Modern Footer Styling {% endcomment %}
<style>
  .footer-premium {
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    color: #e2e8f0;
    position: relative;
    overflow: hidden;
  }

  .footer-premium::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(148, 163, 184, 0.3), transparent);
  }

  .footer-premium::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at 50% 50%, rgba(59, 130, 246, 0.03) 0%, transparent 50%);
    pointer-events: none;
  }
  
  .footer-premium .footer-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 4rem 2rem 2rem;
    position: relative;
    z-index: 1;

    @media screen and (width >= 768px) {
      padding: 5rem 3rem 2.5rem;
    }
  }
  
  .footer-premium .footer-main {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 3rem;
    margin-bottom: 3rem;

    @media screen and (width >= 1024px) {
      gap: 4rem;
      margin-bottom: 4rem;
    }
  }
  
  .footer-premium .footer-column {
    animation: fadeInUp 0.6s ease-out;
  }

  .footer-premium .footer-column:nth-child(2) {
    animation-delay: 0.1s;
  }

  .footer-premium .footer-column:nth-child(3) {
    animation-delay: 0.2s;
  }

  .footer-premium .footer-column:nth-child(4) {
    animation-delay: 0.3s;
  }
  
  .footer-premium .footer-column h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: #f8fafc;
    margin-bottom: 1.5rem;
    letter-spacing: -0.025em;
    position: relative;
    padding-bottom: 0.75rem;
  }

  .footer-premium .footer-column h3::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 2rem;
    height: 2px;
    background: linear-gradient(90deg, #3b82f6, #1d4ed8);
    border-radius: 1px;
  }
  
  .footer-premium .footer-column ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .footer-premium .footer-column li {
    margin: 0;
  }
  
  .footer-premium .footer-column a {
    color: #cbd5e1;
    text-decoration: none;
    font-size: 0.95rem;
    line-height: 1.5;
    letter-spacing: -0.01em;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.25rem 0;
    border-radius: 0.375rem;
    position: relative;
  }

  .footer-premium .footer-column a::before {
    content: '';
    position: absolute;
    left: -0.5rem;
    top: 50%;
    transform: translateY(-50%);
    width: 0;
    height: 1px;
    background: #3b82f6;
    transition: width 0.3s ease;
  }
  
  .footer-premium .footer-column a:hover {
    color: #f8fafc;
    transform: translateX(0.5rem);
  }

  .footer-premium .footer-column a:hover::before {
    width: 0.25rem;
  }

  /* Newsletter Section */
  .footer-premium .newsletter-signup {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(148, 163, 184, 0.1);
    border-radius: 1rem;
    padding: 2rem;
    margin-bottom: 3rem;
    transition: all 0.3s ease;
    animation: fadeInUp 0.6s ease-out 0.4s both;
  }

  .footer-premium .newsletter-signup:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: rgba(148, 163, 184, 0.2);
    transform: translateY(-2px);
  }
  
  .footer-premium .newsletter-signup h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #f8fafc;
    margin-bottom: 0.5rem;
    letter-spacing: -0.025em;
  }
  
  .footer-premium .newsletter-signup p {
    color: #cbd5e1;
    margin-bottom: 1.5rem;
    font-size: 1rem;
    line-height: 1.6;
  }
  
  .footer-premium .newsletter-form {
    display: flex;
    gap: 0.75rem;
    flex-wrap: wrap;

    @media screen and (width < 640px) {
      flex-direction: column;
    }
  }
  
  .footer-premium .newsletter-input {
    flex: 1;
    min-width: 250px;
    padding: 0.875rem 1rem;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(148, 163, 184, 0.2);
    border-radius: 0.75rem;
    font-size: 1rem;
    color: #f8fafc;
    transition: all 0.3s ease;
    backdrop-filter: blur(5px);

    @media screen and (width < 640px) {
      min-width: unset;
    }
  }

  .footer-premium .newsletter-input::placeholder {
    color: #94a3b8;
  }
  
  .footer-premium .newsletter-input:focus {
    outline: none;
    border-color: #3b82f6;
    background: rgba(255, 255, 255, 0.15);
    box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
  }
  
  .footer-premium .newsletter-button {
    background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
    color: white;
    border: none;
    border-radius: 0.75rem;
    padding: 0.875rem 1.5rem;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 14px 0 rgba(59, 130, 246, 0.3);
    white-space: nowrap;
  }
  
  .footer-premium .newsletter-button:hover {
    background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px 0 rgba(59, 130, 246, 0.4);
  }

  .footer-premium .newsletter-button:active {
    transform: translateY(0);
  }
  
  .footer-premium .footer-bottom {
    border-top: 1px solid rgba(148, 163, 184, 0.1);
    padding-top: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1.5rem;
    animation: fadeInUp 0.6s ease-out 0.5s both;

    @media screen and (width < 768px) {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }
  }
  
  .footer-premium .footer-copyright {
    color: #94a3b8;
    font-size: 0.875rem;
    font-weight: 400;
    letter-spacing: -0.01em;
  }

  .footer-premium .footer-links {
    display: flex;
    gap: 2rem;
    flex-wrap: wrap;

    @media screen and (width < 768px) {
      justify-content: center;
      gap: 1.5rem;
    }
  }

  .footer-premium .footer-links a {
    color: #cbd5e1;
    text-decoration: none;
    font-size: 0.875rem;
    transition: color 0.3s ease;
  }

  .footer-premium .footer-links a:hover {
    color: #3b82f6;
  }
  
  .footer-premium .footer-social {
    display: flex;
    gap: 1rem;
    align-items: center;
  }
  
  .footer-premium .footer-social a {
    width: 2.5rem;
    height: 2.5rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(148, 163, 184, 0.1);
    border-radius: 0.75rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #cbd5e1;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
  }
  
  .footer-premium .footer-social a:hover {
    background: #3b82f6;
    border-color: #3b82f6;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px 0 rgba(59, 130, 246, 0.3);
  }

  .footer-premium .footer-social svg {
    width: 1.125rem;
    height: 1.125rem;
  }

  /* Trust Indicators */
  .footer-premium .trust-indicators {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(148, 163, 184, 0.1);

    @media screen and (width < 768px) {
      justify-content: center;
      flex-wrap: wrap;
      gap: 1rem;
    }
  }

  .footer-premium .trust-indicator {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #94a3b8;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-weight: 600;
  }

  .footer-premium .trust-indicator svg {
    width: 1rem;
    height: 1rem;
    color: #10b981;
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Mobile Optimizations */
  @media screen and (width < 768px) {
    .footer-premium .footer-main {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-premium .footer-content {
      padding: 3rem 1.5rem 2rem;
    }

    .footer-premium .newsletter-signup {
      padding: 1.5rem;
      margin-bottom: 2rem;
    }

    .footer-premium .footer-column h3 {
      font-size: 1.125rem;
      margin-bottom: 1rem;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .footer-premium .footer-column,
    .footer-premium .newsletter-signup,
    .footer-premium .footer-bottom,
    .footer-premium .footer-column a,
    .footer-premium .newsletter-input,
    .footer-premium .newsletter-button,
    .footer-premium .footer-social a,
    .footer-premium .newsletter-signup {
      animation: none;
      transition: none;
    }

    .footer-premium .footer-column a:hover,
    .footer-premium .newsletter-button:hover,
    .footer-premium .footer-social a:hover,
    .footer-premium .newsletter-signup:hover {
      transform: none;
    }
  }

  /* High Contrast Mode */
  @media (prefers-contrast: high) {
    .footer-premium {
      background: #000;
      color: #fff;
    }

    .footer-premium .footer-column a {
      color: #fff;
    }

    .footer-premium .newsletter-input {
      background: #333;
      border-color: #666;
      color: #fff;
    }
  }
</style>

